<script src="~/js/availability.js"></script>

<script>
    $('.time').timepicker({
        'showDuration': true,
        'timeFormat': 'G:i',
        'show2400': true,
        'maxTime': '23:59',
        'defaultTimeDelta': '60000',
        'step': '15',
        'disableTextInput': true
    });

    $('.time-pair').datepair();
</script>