@model VolunteerPageModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Medicine Hat Food Bank</title>
    <link href="~/lib/sb-admin/css/styles.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href='~/fullcalendar/packages/core/main.css' rel='stylesheet' />
    <link href='~/fullcalendar/packages/daygrid/main.css' rel='stylesheet' />
    <link href='~/fullcalendar/packages/timegrid/main.css' rel='stylesheet' />
    <link href='~/fullcalendar/packages/list/main.css' rel='stylesheet' />
    <link href="~/lib/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.css" rel="stylesheet" />

    <style>
        body {
            margin: 40px 10px;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://momentjs.com/downloads/moment.js"></script>
    <script src="~/lib/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validate/additional-methods.js"></script>
    <script src='~/fullcalendar/packages/core/main.js'></script>
    <script src='~/fullcalendar/packages/interaction/main.js'></script>
    <script src='~/fullcalendar/packages/daygrid/main.js'></script>
    <script src='~/fullcalendar/packages/timegrid/main.js'></script>
    <script src='~/fullcalendar/packages/list/main.js'></script>
    <script src="~/fullcalendar/vendor/rrule.js"></script>
    <script src="~/fullcalendar/packages/rrule/main.js"></script>

    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <button class="btn btn-link btn-sm order-1 order-lg-0 ml-3" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand" style="font-size: 1.3em;" asp-page="/Main"><img style="height: 50px; width: 50px; margin-right: 10px;" src="~/MHFB.png" alt="MHFB Logo" /><span class="site-title"><strong>MH Food Bank</strong></span></a>
        <div class="ml-3" style="font-size: 1.3em; color: #fff;">@Model.CurrentPage</div>
        <ul class="navbar-nav ml-auto ml-md-12">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i> Welcome @Model.LoggedInUser!</a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" asp-page="/Account/Logout" asp-area="Identity">Logout</a>
                </div>
            </li>
        </ul>
    </nav>


    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Menu</div>
                        <a class="nav-link" asp-page="/Account/Manage/PersonalInformation" asp-area="Identity">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-circle"></i></div>
                            My Information
                        </a>
                        <a class="nav-link" asp-page="/VolunteerCalendar" asp-area="Volunteer">
                            <div class="sb-nav-link-icon"><i class="fa fa-calendar"></i></div>
                            Schedule
                        </a>

                        @*<a class="nav-link" asp-page="/ShiftRequests" asp-area="Volunteer">
                            <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                            Shift Change Requests
                        </a>*@
                        <a class="nav-link" asp-page="/ManageAvailability" asp-area="Volunteer">
                            <div class="sb-nav-link-icon"><i class="fas fa-clock"></i></div>
                            Manage Availability
                        </a>
                        <a class="nav-link" asp-page="/Welcome" asp-area="Volunteer">
                            <div class="sb-nav-link-icon"><i class="far fa-question-circle"></i></div>
                            Help
                        </a>
                    </div>
                </div>
            </nav>
        </div>
  
            <div id="layoutSidenav_content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted"><a href="https://www.mhfoodbank.com/">Medicine Hat Food Bank</a> &bull; <a href="mailto:info@mhfoodbank.com">info@mhfoodbank.com</a></div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

</body>
</html>


<script src="~/lib/sb-admin/js/scripts.js"></script>