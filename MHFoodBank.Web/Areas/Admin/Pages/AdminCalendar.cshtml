    }

    <div>
        <ej-schedule id="Schedule1" width="100%" height="525px" current-date="DateTime.Now" read-only="true">
            <e-appointment-settings datasource="shift" id='"ShiftId"' subject='"Description"' start-time='"StartTime"' end-time='"EndTime"' all-day='"IsAllDay"' recurrence='"IsRecurrence"' recurrence-rule='"RecurrenceRule"'>
                @*<e-datamanager url="/Home/GetData" adaptor="UrlAdaptor"></e-datamanager>*@
