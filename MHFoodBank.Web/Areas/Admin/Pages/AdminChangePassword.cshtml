@page
@model MHFoodBank.Web.Areas.Admin.Pages.ChangePasswordModel
@{
    Layout = "~/Areas/Admin/Pages/Shared/_Layout.cshtml";
}

<div class="ml-5">
    <h4>Change Password for @Model.Volunteer.FirstName @Model.Volunteer.LastName<span class="text-center" style="display: none;" id="text"> - WARNING! Caps lock is ON.</span></h4>

    <div class="row">
        <div class="col-md-6">
            <hr />
            <form id="change-password-form" method="post">
                <input type="hidden" asp-for="Volunteer.Id" value="@Model.Volunteer.Id" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword"></label>
                    <input onclick="checkCapsLock()" type="password" asp-for="Input.NewPassword" class="form-control pass" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input onclick="checkCapsLock()" type="password" asp-for="Input.ConfirmPassword" class="form-control pass" />
                </div>
                <hr />
                <button type="submit" class="btn btn-primary">Update password</button>
            </form>
        </div>
    </div>
</div>

<script>
    // Get the input field
    let input = document.getElementsByClassName("pass");

    // Get the warning text
    let text = document.getElementById("text");

    for (i = 0; i < input.length; i++) {
            // When the user presses any key on the keyboard, run the function
        input[i].addEventListener("keyup", function (event) {

            // If "caps lock" is pressed, display the warning text
            if (event.getModifierState("CapsLock")) {
                text.style.display = "inline";
            } else {
                text.style.display = "none"
            }
        });
    }

    function checkCapsLock() {
        // If "caps lock" is pressed, display the warning text
        if (event.getModifierState("CapsLock")) {
            text.style.display = "inline";
        } else {
            text.style.display = "none"
        }
    }
</script>

